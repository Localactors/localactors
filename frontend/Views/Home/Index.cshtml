@using System.Configuration
@model Localactors.webapp.Controllers.HomeController.HomeModel
@{
    ViewBag.Title = "";
}
<div id='map'>
    <div id='slides'>
        <ul>
            <li class='slide1'>
                <img data-src980="/content/images/world1.png" src="/content/images/world1-mobile.png" />
            </li>
            <li class='slide2'>
                <img data-src980="/content/images/world2.png" src="/content/images/world2-mobile.png" />
            </li>
            <li class='slide3'>
                <img data-src980="/content/images/world3.png" src="/content/images/world3-mobile.png" />
            </li>
        </ul>
    </div>
    <div id='steps'>
        <div id='arrow_left'>
        </div>
        <div id='text'>
            <ul>
                <li class='step1'>
                    <div id='arrow1'>
                    </div>
                    <div id='title'>
                        <h4>
                            From local</h4>
                        <p>
                            You see a need and figure out a project. Either you run one or you find one to support.</p>
                    </div>
                </li>
                <li class='step2'>
                    <div id='arrow2'>
                    </div>
                    <div id='title'>
                        <h4>
                            To global</h4>
                        <p>
                            You publish and get in touch with supporters. Through local actors the project gets
                            funding, resources and ideas.</p>
                    </div>
                </li>
                <li class='step3'>
                    <div id='arrow3'>
                    </div>
                    <div id='title'>
                        <h4>
                            You become a local actor</h4>
                        <p>
                            When you succeed, the project gets going and you become a local actor.</p>
                    </div>
                </li>
            </ul>
        </div>
        <div id='arrow_right'>
        </div>
    </div>
    <div class='banner-container'>
        <div class='banner-call'>
            <div class='border1'>
            </div>
            <div class='border2'>
            </div>
            <div class='bg-dash'>
            </div>
            <div class='bg-white'>
            </div>
            <div class='icon'>
            </div>
            <ul>
                <li><a href='@Url.Action("CallForProjects", "Home")' lang='en'>Looking for new projects!</a>
                </li>
                <li><a href='@Url.Action("CallForProjects", "Home")' lang='it'>Cerchiamo progetti interessanti!</a>
                </li>
                <li><a href='@Url.Action("CallForProjects", "Home")' lang='es'>¡En busca de nuevos proyectos!</a>
                </li>
                <li><a href='@Url.Action("CallForProjects", "Home")' lang='pt'>Buscamos novos projetos!</a>
                </li>
                <li><a href='@Url.Action("CallForProjects", "Home")' lang='tr'>Yeni projeler arıyoruz!</a>
                </li>
                <li><a href='@Url.Action("CallForProjects", "Home")' lang='fr'>Avez vous des nouveaux
                    projets?</a> </li>
                <li><a dir='rtl' href='@Url.Action("CallForProjects", "Home")' lang='ar'>نحن نبحث عن
                    مشاريع جديدة</a> </li>
                <li><a href='@Url.Action("CallForProjects", "Home")' lang='zh'>期待合作</a> </li>
                <li><a href='@Url.Action("CallForProjects", "Home")' lang='cs'>Hledame nove projekty</a>
                </li>
                <li><a href='@Url.Action("CallForProjects", "Home")' lang='pl'>Masz nowy projekt ? Podziel
                    sie z nami !</a> </li>
                <li><a href='@Url.Action("CallForProjects", "Home")' lang='hu'>Uj projekteket keresunk!</a>
                </li>
                <li><a href='@Url.Action("CallForProjects", "Home")' lang='de'>Wir suchen neue Projekte!</a>
                </li>
                <li><a href='@Url.Action("CallForProjects", "Home")' lang='nl'>We zijn op zoek naar
                    nieuwe projecten!</a> </li>
            </ul>
        </div>
    </div>
    <div class='clear'>
    </div>
    <hr class='spacer-home'>
</div>
<div id='explanation'>
    <ul>
        <li>
            <h2>
                meet the local actors / <span>publishers</span>
            </h2>
            <p>
                We all know where the need is. We look for opportunity to be of use and there is
                no better way than help locally.
            </p>
        </li>
    </ul>
    <ul class='publisher-list'>
        @foreach (var item in Model.publishers)
        {
            var project = item.projects.FirstOrDefault();
            <li class='publisher'><a href='@(project != null ? Url.Action("Updates", "Projects", new { id = project.ProjectID }) : "#")'>
                <img src="@item.Image" />
                <span>@item.Name @item.Lastname</span> </a></li>
        }
    </ul>
    <div class='clear'>
    </div>
  <ul>
          <li>
            <h2>
              last published /
              <span>projects</span>
            </h2>
          </li>
        </ul>
    @foreach (project project in Model.projects)
    {
        <hr class='spacer-projects'>
        <div class='cover-projects'>
          <p class='info-project-track'>
              <span class="number">@((DateTime.Now - project.DateEnd).Days)</span> days / <span class="number">&#128; @project.donations.Sum(x => x.Amount)</span> raised of 
              <span class="number">&#128; @project.Target</span> pledged / <span class="number">@project.donations.Select(x => x.UserID).Distinct().Count()</span> supporters
          </p>
          <div class='info-project'>
            <h1 class='title'>
              <a href='@Url.Action("Updates", "Projects", new { id = project.ProjectID })'>
                        @Html.Raw(project.Title)
                    </a>
            </h1>
            <div class='icon-where'></div>
            <h2 class='subtitle'>
               @Html.Raw(project.Location)
            </h2>
            <p class='intro'>
              @Html.Raw(project.Description)
            </p>
          </div>
          <div class='container-photo'>
            <img alt='' class='photo-cover' src='@project.Image'>
          </div>
        </div>   
    }
</div>
