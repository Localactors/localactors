@using System.Configuration
@model Localactors.entities.project
@{
    ViewBag.Title = Model.Title + "";
}

@{Html.RenderPartial("_Project_Header", Model);}

<div id='project-update-tab'>
    <ul class='tab'>
        <li><a href='@Url.Action("Updates","Projects",new{id=Model.ProjectID})'>Update</a> </li>
        <li class='active'><a href='@Url.Action("Details","Projects",new{id=Model.ProjectID})'>Project Details</a> </li>
        <li><a href='@Url.Action("Guestbook","Projects",new{id=Model.ProjectID})'>Guestbook</a> </li>
        <li><a href='@Url.Action("Ask","Projects",new{id=Model.ProjectID})'>Ask a Question</a> </li>
    </ul>
    <hr class='tab-line'>
</div>

<div id='update-body'>
    @{Html.RenderPartial("_Project_Sidebar", Model);}
    <div class="photos">
        @foreach (var item in Model.project_photo)
        {
            <img alt='@item.Caption' src='@item.Url' />
        }
    </div>
</div>