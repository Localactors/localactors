@using System.Configuration
@model Localactors.entities.project
@{
    var PP_URL = Url.Content("~/Scripts/paypal-button.min.js") + "?merchant=" + ConfigurationManager.AppSettings["PP_MerchantAccountId"];
}
<div id='project-update-header'>
    <div id='support'>
        <div id='publisher-container'>
            <img alt='' class='photo-publisher' src='@Model.user.Image'>
            <a class='name' href='@Url.Action("Details", "Profile", new { id = Model.UserID })'>
                @Model.user.Name
                @Model.user.Lastname
            </a>
        </div>
        <hr class='spacer-donate'>
        <div class='share'>
            <div class='facebook'>
            </div>
            <div class='twitter'>
            </div>
            <div class='googleplus'>
            </div>
        </div>
        <div class='donate'>
            <div class='clear-box'>
            </div>
            <div class='button_container'>
                <div class='corner_left'>
                </div>
                <h4 class='buttons yellow_button'>
                    @if (User.Identity.IsAuthenticated)
                    {

                        <script src="@PP_URL"
                                data-button="donate" 
                                data-name="Project" 
                                data-number="1" 
                                data-custom="@User.Identity.Name"
                                data-currency="@ConfigurationManager.AppSettings["PP_Currency"]"
                                    data-callback="@ConfigurationManager.AppSettings["PP_Callback"]" 
                                    data-return="@Url.AbsoluteAction("return", "donation", new { projectid = Model.ProjectID })"
                                @if (@ConfigurationManager.AppSettings["PP_environment"] == "sandbox")
                                {
                                    <text>data-env = "sandbox"</text>
                                }
                            ></script>
    
                    }
                </h4>
                <div class='corner_right'>
                </div>
            </div>
        </div>
    </div>
    <div class='clear'>
    </div>
    <div id='project-headline'>
        <h1 class='title'>@Model.Title</h1>
        <div class='icon-where'>
        </div>
        <h2 class='subtitle'>@Model.Location</h2>
    </div>
    <div class='tags-container'>
        <h4>
            Tags:
        </h4>
        <ul class='tags'>
            @foreach (var tag in @Model.tags)
            {
                <li><a href='@Url.Action("index", "Projects", new { tag = tag.Name })'>@tag.Name</a></li>
            }
        </ul>
    </div>
</div>
