@model Localactors.entities.project
<div id='project-update-header'>
    <div id='support'>
        <div class='share'>
            <div class='facebook'>
            </div>
            <div class='twitter'>
            </div>
            <div class='googleplus'>
            </div>
        </div>
        <div class='donate'>
            <div class='clear-box'>
            </div>
            <div class='button_container'>
                <div class='corner_left'>
                </div>
                <h4 class='buttons yellow_button'>
                    <a href='@Url.Action("Donate","Projects",new{id=Model.ProjectID})'>Donate</a>
                </h4>
                <div class='corner_right'>
                </div>
            </div>
        </div>
    </div>

    <div id='publisher-container'>
        <a class='container-pic' href='@Url.Action("Details", "Profile", new { id = Model.UserID })'>
            <img alt="" class=".photo-publisher" src="@Model.user.Image" />
            <span class='name'>@Model.user.Name
                @Model.user.Lastname</span> </a>
    </div>

    <div id='project-headline'>
        
        <div class='container-headline'>
            <h1 class='title'>@Html.Raw(Model.Title)</h1>
            <div class='icon-where'>
            </div>
            <h2 class='subtitle'>@Html.Raw(Model.Location)</h2>
        </div>

        <div class='tags-container'>
            <h4>
                Tags:
            </h4>
            <ul class='tags'>
                @foreach (var tag in @Model.tags)
                {
                    <li>
                        <div class='bullet'>
                        </div>
                        <a href='@Url.Action("index", "Projects", new { tag = tag.Name })'>@tag.Name</a></li>
                }
            </ul>
        </div>
    </div>
</div>
