@model ResetPasswordModel
@{
    ViewBag.Title = "Reset Password";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id='grey-bg'>
    <section class='page'>
        <div id='login-page'>
            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "login-form", @id = "das-form" }))
            {
                @Html.ValidationSummary(false)
                @Html.HiddenFor(model => model.Key)
                @Html.ValidationMessageFor(model => model.Key)
                <div id='login-form'>
                    <div class='container_robot'>
                        <div class='robot-form'>
                        </div>
                        <div class='container'>
                        </div>
                    </div>
                    <div class='container-text-form'>
                        <fieldset>@Html.ValidationMessageFor(model => model.Password)
                            <label class="password" for="password">
                                Password:
                            </label>
                            @Html.PasswordFor(model => model.Password)
                            <p class='separatore'>
                            </p>
                            @Html.ValidationMessageFor(model => model.Confirm)
                            <label class="conferma_password" for="conferma_password">
                                Conferma password:
                            </label>
                            @Html.PasswordFor(model => model.Confirm)
                        </fieldset>
                        <a class='yellow-button' href='javascript:$("#das-form")[0].submit();' id='registrati'><span>Conferma</span> </a>
                    </div>
                </div>
            }
        </div>
    </section>
</div>
