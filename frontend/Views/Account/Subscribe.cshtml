@model SubscribeModel
@{
    ViewBag.Title = "Registrazione Utente";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Subscribe","Account",FormMethod.Post,new{@class="blue-form", id="register"}))
{
    
    @Html.ValidationSummary(true)
    <div class='container-form'>
        <div class="mail">
            <label for="Email" class="" style="text-align: right;">Email</label>   
            @Html.TextBoxFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="password">
            <label for="Password" class="" style="text-align: right;">Password</label>
            @Html.PasswordFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <div class="confirm-password">
            <label for="Confirm" class="" style="text-align: right;">Password Confirm</label>
            @Html.PasswordFor(model => model.Confirm)
            @Html.ValidationMessageFor(model => model.Confirm)
        </div>
        <div class="newsletter">

            <input class="newsletter" data-val="true" data-val-required="The Newsletter field is required." id="Newsletter" name="Newsletter" type="checkbox" value="true" />
            <label for="Newsletter" class="newsletter"><span></span> Newsletter</label>
            <input name="Newsletter" type="hidden" value="false" />
            @Html.ValidationMessageFor(model => model.Newsletter)
        </div>

    </div>
        

    <hr class='spacer privacy' />
    <div class="privacy">
        <p>
            After reading the <span class='iubenda'><a class='iubenda-white iubenda-embed' href='http://www.iubenda.com/privacy-policy/300072'
                title='Privacy Policy'>Privacy Policy</a>
                <script type='text/javascript'>
                    (function (w, d) {
                        var loader = function () {
                            var s = d.createElement("script"),
                tag = d.getElementsByTagName("script")[0]; s.src = "http://cdn.iubenda.com/iubenda.js";
                            tag.parentNode.insertBefore(s, tag);
                        }; if (w.addEventListener) { w.addEventListener("load", loader, false); }
                        else if (w.attachEvent) { w.attachEvent("unload", loader); } else { w.onload = loader; } 
                    })(window, document);
                </script>
            </span>, i agree to the terms hereby exposed.
        </p>
        <div class='container-radio'>
            <div class="radio">
                <input type="radio" class="Privacy0" id="Privacy0" name="Privacy" value="I Agree" 
                       data-val-required="Privacy Policy Agreement is Mandatory."
                       data-val="true" />
                 <label for="Privacy0" class="Privacy0" style="text-align: right;">
                    <span></span> I Agree</label>
            </div>
            <div class="radio">
                <input type="radio" class="Privacy1" id="Privacy1" name="Privacy" value="I Don't Agree"
                       data-val-required="Privacy Policy Agreement is Mandatory" data-val="true" />
                <label for="Privacy1" class="Privacy1" style="text-align: right;">
                    <span></span> I Don't Agree</label>
            </div>
            @Html.ValidationMessageFor(model => model.Privacy)
        </div>
    </div>
    
     <div class="privacy">
        <p>
            After reading the <a href="@Url.Action("TOS", "Home")" target="_blank">
                Terms and Conditions </a>, i agree to the terms hereby exposed.
        </p>
        <div class='container-radio'>
            <div class="radio">
                <input type="radio" class="Terms0" id="Terms0" name="Terms" value="I Agree" 
                data-val-required="Terms Agreement is Mandatory."
                    data-val="true" />
                 <label for="Terms0" class="Terms0" style="text-align: right;">
                    <span></span> I Agree</label>
            </div>
            <div class="radio">
                <input type="radio" class="Terms1" id="Terms1" name="Terms" value="I Don't Agree"
                    data-val-required="Terms Agreement is Mandatory" data-val="true" />
                <label for="Terms1" class="Terms1" style="text-align: right;">
                    <span></span> I Don't Agree</label>
            </div>
            @Html.ValidationMessageFor(model => model.Terms)
        </div>
    </div>

    <br />
    <hr class='spacer button' />


    <div class='iscriviti'>
        <div class='clear-box'>
        </div>
        <div class='button_container'>
            <div class='corner_left'>
            </div>
            <h4 class='buttons yellow_button'>
                <input type='submit' value='  Register  '>
            </h4>
            <div class='corner_right'>
            </div>
        </div>
    </div>
}
