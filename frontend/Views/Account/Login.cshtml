@model LoginModel
@{
    ViewBag.Title = "Accedi";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "blue-form", id = "register" }))
{
    
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ReturnUrl)

    <div class='container-form'>
        <div class="mail">
            @Html.LabelFor(model => model.Username, "Email")
            @Html.TextBoxFor(model => model.Username)
            @Html.ValidationMessageFor(model => model.Username)
        </div>
        <div class="password">
            @Html.LabelFor(model => model.Password, "Password")
            @Html.PasswordFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>
    </div>
        
    <br />
    <hr class='spacer button' />


    <div class='iscriviti'>
        <div class='clear-box'>
        </div>
        <div class='button_container'>
            <div class='corner_left'>
            </div>
            <h4 class='buttons yellow_button'>
                <input type='submit' value='  Login  '>
            </h4>
            <div class='corner_right'>
            </div>
        </div>
        &nbsp;
        <div class='button_container'>
            <div class='corner_left'>
            </div>
            <h4 class='buttons yellow_button'>
                <a class='' href='@Url.Action("ResetPasswordRequest")'>Recover Password</a>
            </h4>
            <div class='corner_right'>
            </div>
        </div>
    </div>
}
