@model LoginModel
@{
    ViewBag.Title = "Accedi";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id='explanation'>
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @id = "loginform" }))
{

    @Html.HiddenFor(model => model.ReturnUrl)


    <fieldset>
        <label class="" for="username">
            Email:
        </label>
        @Html.TextBoxFor(model => model.Username, new { @id = "login" })
        @Html.ValidationMessageFor(model => model.Username)
        <label class="" for="password">
            Password:
        </label>
        @Html.PasswordFor(model => model.Password, new { @id = "password" })
        @Html.ValidationMessageFor(model => model.Password)
        <input type="submit" class="btn"  style="display: none" />
    </fieldset>
    <a class='' href='@Url.Action("ResetPasswordRequest")'>Ricorda password</a>
    <a class='' href='#' id='registrati' onclick="document.getElementById('loginform').submit();return false;">
        <span>Login</span> </a>


    
    
}
</div>