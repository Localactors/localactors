@model SettingsModel
@{
    ViewBag.Title = "Opzioni Profilo: " + Model.Username;
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @using (Html.BeginForm("UserSettings", "Account", FormMethod.Post, new { @class = "blue-form", id = "register" }))
    {
    


        @Html.ValidationSummary(true)
        <div class='container-form'>
            <div class="name">
                @Html.LabelFor(model => model.Name, "Nome")
                @Html.TextBoxFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="bio">
                @Html.LabelFor(model => model.Bio, "Bio")
                @Html.TextAreaFor(model => model.Bio)
                @Html.ValidationMessageFor(model => model.Bio)
            </div>
        </div>

        <hr />
        <h6>
            Cambio password</h6>

        <div class='container-form'>
            <div class="password">
                @Html.LabelFor(model => model.OldPassword, "Vecchia Password")
                @Html.PasswordFor(model => model.OldPassword)
                @Html.ValidationMessageFor(model => model.OldPassword)
            </div>
            <div class="new-password">
                @Html.LabelFor(model => model.Password, "Nuova Password")
                @Html.PasswordFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="password-confirm">
                @Html.LabelFor(model => model.Password, "Conferma Nuova Password")
                @Html.PasswordFor(model => model.Confirm)
                @Html.ValidationMessageFor(model => model.Confirm)
            </div>
        </div>

        <br />
        <hr class='spacer button' />


        <div class='iscriviti'>
            <div class='clear-box'>
            </div>
            <div class='button_container'>
                <div class='corner_left'>
                </div>
                <h4 class='buttons yellow_button'>
                    <input type='submit' value='  Update  '>
                </h4>
                <div class='corner_right'>
                </div>
            </div>
        </div>

    }
