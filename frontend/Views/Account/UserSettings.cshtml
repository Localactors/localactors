@model SettingsModel

@{
    ViewBag.Title = "Opzioni Profilo: " + Model.Username;
}



<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    
    <div class="span8 ">

    @Html.ValidationSummary(true)

        <div class="clearfix">
            @Html.LabelFor(model => model.Name, "Nome")
            @Html.TextBoxFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="clearfix">
            @Html.LabelFor(model => model.Bio, "Bio")
            @Html.TextAreaFor(model => model.Bio)
            @Html.ValidationMessageFor(model => model.Bio)
        </div>

        

        <hr />
        <h6>Cambio password</h6>

        <div class="clearfix">
            @Html.LabelFor(model => model.OldPassword, "Vecchia Password")
            @Html.PasswordFor(model => model.OldPassword)
            @Html.ValidationMessageFor(model => model.OldPassword)
        </div>

        <div class="clearfix">
            @Html.LabelFor(model => model.Password, "Nuova Password")
            @Html.PasswordFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <div class="clearfix">
            @Html.LabelFor(model => model.Password, "Conferma Nuova Password")
            @Html.PasswordFor(model => model.Confirm)
            @Html.ValidationMessageFor(model => model.Confirm)
        </div>


    
            <input type="submit" class="btn"  value="Aggiorna" class="btn primary" /> 
            @Html.ActionLink("Indietro", "Index", new { }, new { @class = "btn default align-right" })

    </div>
}

