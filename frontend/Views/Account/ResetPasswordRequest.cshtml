@model ResetPasswordRequestModel
@{
    ViewBag.Title = "Richiedi Reset Password";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id='explanation'>
    @using (Html.BeginForm("ResetPasswordRequest", "Account", FormMethod.Post, new { @class = "login-form", @id = "das-form" }))
    {
        @Html.ValidationSummary(false)

        <div id='login-form'>
            <div class='container_robot'>
                <div class='robot-form'>
                </div>
                <div class='container'>
                </div>
            </div>
            <div class='container-text-form'>
                <fieldset>
                    @Html.ValidationMessageFor(model => model.Username)
                    <label class="login" for="username">
                        Userame/Email:
                    </label>
                    @Html.TextBoxFor(model => model.Username)
                </fieldset>
                <a class='yellow-button' href='javascript:$("#das-form")[0].submit();' id='registrati'>
                    <span>Richiedi</span> </a>
            </div>
        </div>
    }
</div>
