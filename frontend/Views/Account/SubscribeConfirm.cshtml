@model string
@{
    ViewBag.Title = "Conferma Email";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("SubscribeConfirm", "Account", FormMethod.Post, new { @class = "blue-form", id = "register" }))
{
    
    @Html.ValidationSummary(true)


    <div class='container-form'>
        <div class="mail">
            copia nella casella seguente il codice che trovi nella email di conferma.
            <br />
            In alternativa puoi semplicemente cliccare il link della mail di conferma.
            <br />
            <i>Attenzione: il tuo programma di posta potrebbe avere inserito il messaggio di attivazione
                nella cartella di spam.</i>
        </div>
        <div class="mail">
            @Html.Label("key", "Chiave di Conferma")
            @Html.TextBox("key", (string)ViewBag.key)
            @Html.ValidationMessage("key")
        </div>
    </div>
        
    <br />
    <hr class='spacer button' />


    <div class='iscriviti'>
        <div class='clear-box'>
        </div>
        <div class='button_container'>
            <div class='corner_left'>
            </div>
            <h4 class='buttons yellow_button'>
                <input type='submit' value='  Conferma  '>
            </h4>
            <div class='corner_right'>
            </div>
        </div>
    </div>
}
