@model string
@{
    ViewBag.Title = "Email Confirmation";
}

@using (Html.BeginForm("SubscribeConfirm", "Account", FormMethod.Post, new { @class = "blue-form", id = "register" }))
{
    
    @Html.ValidationSummary(true)


    <div class='container-form'>
        <div class="mail">
            Copy the confirmation code (the one in your confirmation email) in the following
            box or click the link in the confirmation email.
        </div>
        <div class="mail">
            <label for="key">Confirmation Key</label>
            @Html.TextBox("key", (string)ViewBag.key)
            @Html.ValidationMessage("key")
        </div>
    </div>
        
    <br />
    <hr class='spacer button' />


    <div class='iscriviti'>
        <div class='clear-box'>
        </div>
        <div class='button_container'>
            <div class='corner_left'>
            </div>
            <h4 class='buttons yellow_button'>
                <input type='submit' value='  Confirm  '>
            </h4>
            <div class='corner_right'>
            </div>
        </div>
    </div>
}
