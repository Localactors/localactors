@model IEnumerable<Localactors.entities.tag>

@{
    ViewBag.Title = "Index";
}

<ul class="breadcrumb">
    <li><a href='@Url.Action("Index","Home")'>Home</a> <span class="divider">/</span></li>
    <li class="active"><a href='@Url.Action("Index","tag")'>Tags</a> <span class="divider">/</span></li>
</ul>

<p>
    @Html.ActionLink("Create New", "Create",new{},new{@class="btn"})
</p>
<table class="table table-condensed table-striped table-bordered">
    <tr>
        <th>
            Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TagID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TagID })
        </td>
    </tr>
}

</table>
