@model Localactors.entities.donation

@{
    ViewBag.Title = "Delete";
}

<ul class="breadcrumb">
    <li><a href='@Url.Action("Index","Home")'>Home</a> <span class="divider">/</span></li>
    <li><a href='@Url.Action("Index","projects")'>Projects</a> <span class="divider">/</span></li>
    <li class=""><a href="/admin/projects/edit/@ViewBag.Project.ProjectID">@ViewBag.Project.Title</a> <span class="divider">/</span> </li>
    <li class=""><a href='@Url.Action("Index","Donations",new{projectid=ViewBag.Project.ProjectID})'>Donations</a> <span class="divider">/</span> </li>
    <li class="active"><a href='@Url.Action("delete","Donations",new{id=Model.InvestmentID})'>@Model.Description (delete) </a></li>
</ul>

<h3>Are you sure you want to delete this?</h3>
<fieldset>


    <div class="display-label">user</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.user.Role)
    </div>

    <div class="display-label">project</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.project.Title)
    </div>

    <div class="display-label">Date</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Date)
    </div>

    <div class="display-label">Amount</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Amount)
    </div>

    <div class="display-label">Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" class="btn"  value="Delete" /> |
        @Html.ActionLink("Back to List", "Index",new{},new{@class="btn"})
    </p>
}
