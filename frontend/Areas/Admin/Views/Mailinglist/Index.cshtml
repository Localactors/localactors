@model IEnumerable<Localactors.entities.mailinglist>

@{
    ViewBag.Title = "Index";
}

<ul class="breadcrumb">
    <li><a href='@Url.Action("Index","Home")'>Home</a> <span class="divider">/</span></li>
    <li class="active"><a href='@Url.Action("Index","Mailinglist")'>Mailing List</a> <span class="divider">/</span></li>
</ul>

<p>
    @Html.ActionLink("Add New", "Create", new { }, new { @class = "btn" }) @Html.ActionLink("Export", "Export", new { }, new { @class = "btn", target="_blank" }) 
</p>

<table class="table table-condensed table-striped table-bordered">
    <tr>
        <th>
            Address
        </th>
        <th>
            Name
        </th>
        <th>
            Date
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AddressID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AddressID })
        </td>
    </tr>
}

</table>
