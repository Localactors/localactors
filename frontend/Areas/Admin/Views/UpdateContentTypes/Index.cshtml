@model IEnumerable<Localactors.entities.update_content_type>

@{
    ViewBag.Title = "Index";
}
<ul class="breadcrumb">
    <li><a href='@Url.Action("Index","Home")'>Home</a> <span class="divider">/</span></li>
    <li class="active"><a href='@Url.Action("Index","UpdateContentTypes")'>Content Types</a> </li>
</ul>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn" })
</p>
<table class="table table-condensed table-striped table-bordered">
    <tr>
        <th>
            Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ContentTypeName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ContentTypeID }) | 
            @Html.ActionLink("Delete", "Delete", new { id=item.ContentTypeID })
        </td>
    </tr>
}

</table>
