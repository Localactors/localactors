@model Localactors.entities.country

@{
    ViewBag.Title = "Delete";
}

<ul class="breadcrumb">
    <li><a href='@Url.Action("Index","Home")'>Home</a> <span class="divider">/</span></li>
    <li><a href='@Url.Action("Index","Country")'>Countries</a> <span class="divider">/</span></li>
    <li class="active"><a href='@Url.Action("Delete","Country",new{id=@Model.CountryID})'>@Model.Name (delete)</a></li>
</ul>


<h3>Are you sure you want to delete this?</h3>
<fieldset>


    <div class="display-label">Code</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Code)
    </div>

    <div class="display-label">Name</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">Order</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Order)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
