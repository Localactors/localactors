@model LoginModel
@{
    ViewBag.Title = "Login";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ReturnUrl)
    
    <div class="row">
        <div class="span4 offset4">
            <div class="clearfix">
                <label for="Username" class="">
                    Username</label>
                @Html.TextBoxFor(model => model.Username, new { @class = "" })
                @Html.ValidationMessageFor(model => model.Username)
            </div>
            <div class="clearfix">
                <label for="Password" class="a">
                    Password</label>
                @Html.PasswordFor(model => model.Password, new { @class = "" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="clearfix">
                <label for="RememberMe" class="">
                    Remember Me</label>
                @Html.CheckBoxFor(model => model.RememberMe, new { @class = "" })
                @Html.ValidationMessageFor(model => model.RememberMe)
            </div>
            @Html.ValidationSummary(true)
            <input type="submit" class="btn"  value="Login" class="btn primary" />
        </div>
    </div>
    <hr class="soften"/>
}
